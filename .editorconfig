# editorconfig.org
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.asciidoc]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
indent_size = 4

[Jenkinsfile]
indent_size = 2

[*.groovy]
indent_size = 2

[*.feature]
indent_size = 2
